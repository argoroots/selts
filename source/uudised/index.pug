extends /layout


block vars
    -
        const dt = date => {
            let d = date.substr(0, 10).split('-')
            return [d[2], d[1], d[0]].join('.')
        }

        self.file.uudised.sort((a, b) => {
            if (a.date > b.date) { return -1 }
            if (a.date < b.date) { return 1 }
            return 0
        })


block content
    each u in self.file.uudised
        h1.row
            a(href='/' + u.path + '/')
                span.hidden-xs.col-sm-3.text-right= dt(u.date)
                .col-xs-12.col-sm-9= u.title
                span.visible-xs.col-xs-12= dt(u.date)
